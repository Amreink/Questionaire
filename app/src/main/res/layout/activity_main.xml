<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="tkapps.questionaire.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16sp">

    <ImageView
        android:id="@+id/imageView_mainQuestionaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/questionaire"
        app:srcCompat="@drawable/questionaire" />

    <ImageView
        android:id="@+id/imageView_mainCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_mainQuestionaire"
        android:contentDescription="@string/logo_description"
        android:padding="5sp"
        android:layout_marginTop="5sp"
        app:srcCompat="@drawable/questionaire_logo" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:background="@android:color/holo_blue_dark">

        <Button
            android:id="@+id/button_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:padding="10sp"
            android:text="@string/start"
            android:textSize="18sp"
            android:background="@android:color/background_light"/>

        <Button
            android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_start"
            android:layout_marginTop="10sp"
            android:padding="10sp"
            android:text="@string/settings"
            android:textSize="18sp"
            android:background="@android:color/background_light"/>

        <Button
            android:id="@+id/button_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_settings"
            android:layout_marginTop="10sp"
            android:padding="10sp"
            android:text="@string/help"
            android:textSize="18sp"
            android:background="@android:color/background_light"/>

        <Button
            android:id="@+id/button_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_help"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:padding="10sp"
            android:text="@string/leaderboard"
            android:textSize="18sp"
            android:background="@android:color/background_light"/>
    </RelativeLayout>
</RelativeLayout>
